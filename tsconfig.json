    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
